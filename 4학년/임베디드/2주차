#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
    
    int input = 0;
    int num = 0;

    int k = 0;

    char str[20] = { 0 };
    char a[160] = { 0 };

    scanf("%d", &input);

    for (int i = 0; i < input; i++) {
        scanf("%d %s", &num, &str, 20);
        for (int j = 0; j < num * strlen(str); j++) {
            a[j] = str[k];
            if ((j+1) % num == 0) {
                k++;
            }
        }
        k = 0;
        printf("%s\n", a);
        for (int k = 0; k < 160; k++) {
            a[k] = 0;
        }
    }

    return 0;
}
